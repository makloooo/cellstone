<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_weight="1">
    <TextView
        android:id="@+id/characterAttribute_stat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/characterAttributes_stat_textPadding"
        android:gravity="center"
        android:textSize="@dimen/characterAttributes_stat_textSize"
        android:text="STT" />
    <TextView
        android:id="@+id/characterAttribute_stat_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/characterAttributes_stat_textPadding"
        android:gravity="center"
        android:layout_toEndOf="@id/characterAttribute_stat_name"
        android:textSize="@dimen/characterAttributes_stat_textSize"
        android:text="VALU" />
</RelativeLayout>